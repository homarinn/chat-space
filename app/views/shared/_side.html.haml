.side
  .side__header
    .side__header__box
      %p.side__header__box__user-name
        = current_user.name
      %ul.side__header__box__menu
        %li.side__header__box__menu__new-group
          = link_to new_group_path, data: {turbolinks: false} do
            =fa_icon "edit"
        %li.side__header__box__menu__edit-user
          = link_to edit_user_path(current_user), data: {turbolinks: false} do
            =fa_icon "cog"
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), group_id: group.id, data: {turbolinks: false} do
        .groups__group
          %p.groups__group__group-name= group.name
          %p.groups__group__group-chat{id: "lastmessage_#{group.id}"}= group.show_last_message
